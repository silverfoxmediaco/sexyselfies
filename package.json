{
  "name": "sexyselfies-monorepo",
  "version": "1.0.0",
  "description": "SexySelfies PWA Platform - Monorepo",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "start": "npm run start --workspace=backend",
    "start:prod": "cross-env NODE_ENV=production npm run start --workspace=backend",
    "dev": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:both": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build --workspace=frontend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "echo 'Backend build complete - no build step required'",
    "build:all": "npm run build:frontend && npm run build:backend",
    "install:all": "npm install",
    "install:backend": "npm install --workspace=backend",
    "install:frontend": "npm install --workspace=frontend",
    "clean": "npm run clean --workspaces --if-present",
    "clean:all": "rimraf node_modules backend/node_modules frontend/node_modules frontend/dist",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "npm run test --workspaces --if-present",
    "test:backend": "npm run test --workspace=backend",
    "test:frontend": "npm run test --workspace=frontend",
    "test:coverage": "npm run test:coverage --workspace=frontend",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "health": "curl -f http://localhost:5002/health || echo 'Health check failed'",
    "deploy": "npm run build:all && npm run start:prod",
    "prepare": "husky"
  },
  "keywords": [
    "pwa",
    "creator-economy",
    "react",
    "express",
    "mongodb",
    "monorepo"
  ],
  "author": "SexySelfies Team",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "cross-env": "^7.0.3",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
