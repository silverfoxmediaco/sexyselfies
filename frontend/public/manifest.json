  "shortcuts": [
    {
      "name": "Discover",
      "url": "/discover",
      "description": "Browse creators",
      "icons": [{ "src": "/icons/nav/discover.svg", "sizes": "96x96" }]
    },
    {
      "name": "Messages",
      "url": "/messages",
      "description": "View your messages",
      "icons": [{ "src": "/icons/actions/message.svg", "sizes": "96x96" }]
    },
    {
      "name": "Upload",
      "url": "/creator/upload",
      "description": "Upload content",
      "icons": [{ "src": "/icons/actions/camera.svg", "sizes": "96x96" }]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+sexyselfies",
      "url": "/share?url=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": ["image/*", "video/*"]
        }
      ]
    }
  }
}
